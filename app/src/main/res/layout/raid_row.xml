<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/RaidTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"

            android:text="Tigerman"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"


            />





        <TextView
            android:id="@+id/DateOfRaid"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:text="6/20/2017"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/TimeOfRaid"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:text="20:0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/RaidIGN"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:text="GM_Spooky"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Joinbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="155dp"
                android:background="@drawable/btn_background"
                android:text="Join"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/RaidImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/tigerman" />


</android.support.v7.widget.CardView>